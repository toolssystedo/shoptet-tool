# Database
# Supported providers: postgresql, mysql, sqlite, sqlserver, mongodb, cockroachdb
DATABASE_URL="postgresql://user:password@localhost:5432/shoptet_tool?schema=public"

# NextAuth.js Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Provider (optional)
# For magic link authentication
EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
EMAIL_FROM="noreply@example.com"

# Resend Email Service
RESEND_API_KEY="your-resend-api-key"

# AI Integration (for Product Enrichment)
# Claude API (Anthropic) - primary
ANTHROPIC_API_KEY="your-anthropic-api-key"
# OpenAI API - fallback/alternative
OPENAI_API_KEY="your-openai-api-key"

